<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".SleepNowFragment"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
            android:id="@+id/tab1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/frontPageLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/front_page_text"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/recentPhotos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scrollbars="vertical"
                android:text="" />

            <LinearLayout
                android:id="@+id/frontTimingsButtonPair1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:buttonBarStyle"
                android:orientation="horizontal" >
                <Button
                    android:id="@+id/stopFrontButton"
                    android:layout_width="150sp"
                    android:layout_height="wrap_content"
                    style="?android:attr/buttonBarButtonStyle"
                    android:text="@string/stop_front_button_label" />
                <Button
                    android:id="@+id/refreshButton"
                    android:layout_width="150sp"
                    android:layout_height="wrap_content"
                    style="?android:attr/buttonBarButtonStyle"
                    android:text="@string/refresh_button_label" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/frontTimingsButtonPair2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:buttonBarStyle"
                android:orientation="horizontal" >
                <Button
                    android:id="@+id/showPhotosButton"
                    android:layout_width="150sp"
                    android:layout_height="wrap_content"
                    style="?android:attr/buttonBarButtonStyle"
                    android:text="@string/show_photos_button_label" />
                <Button
                    android:id="@+id/startfrontButton"
                    android:layout_width="150sp"
                    android:layout_height="wrap_content"
                    style="?android:attr/buttonBarButtonStyle"
                    android:text="@string/start_front_button_label" />
            </LinearLayout>

        <!-- <LinearLayout
            android:id="@+id/frontTimingsButtonPair"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" > -->

                <!-- style="?android:attr/buttonBarButtonStyle" -->
                
            <TextView
                android:id="@+id/photoTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scrollbars="vertical"
                android:text="" />

        <!--    </LinearLayout> -->
</LinearLayout>
